@model BaiTapLon.Areas.Admin.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/DataImage/icon-book-72-275692.png" type="image/x-icon" />
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đăng nhập - Nhà Sách Phương Nam</title>

    <!-- Custom fonts for this template-->
   
    <link href="~/Content/Client/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    
    <link href="~/Content/Client/css/sb-admin.css" rel="stylesheet" />
</head>

<body class="bg-dark">

    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Đăng nhập</div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary(false,"",new { @class="text-danger"})
                    <form>
                        <div class="form-group">
                            <div class="form-label-group">
                               
                                @Html.TextBoxFor(model => model.userName, new { @class = "form-control", @placeholder = "Tài Khoản", @autofocus = "autofocus", @id="inputTK" })
                                @Html.LabelFor(model => model.userName , new { @for= "inputTK" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                @Html.PasswordFor(model => model.passWord, new { @class = "form-control", @placeholder = "Mật Khẩu", @autofocus = "autofocus", @id = "inputmk" })
                                @Html.LabelFor(model => model.passWord, new { @for = "inputmk" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                              <label>
                                  @Html.CheckBoxFor(model => model.Remember) Ghi nhớ tôi
                              </label>
                               
              
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" href="index.html">Đăng nhập</button>
                    </form>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="register.html">Register an Account</a>
                        <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                }
                </div>
            </div>
            </div>
            

    <!-- Bootstrap core JavaScript-->
    
    <script src="~/Content/Client/vendor/jquery/jquery.min.js"></script>
   
    <script src="~/Content/Client/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- Core plugin JavaScript-->
    
    <script src="~/Content/Client/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

</html>

