@model Mood.EF2.NhaCungCap

@{
   
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "NhaCungCap", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Cập nhật nhà cung cấp</h1>
                    </div>
                    <div class="col-6">
                        <div class="float-right pt-1">
                            <input type="submit" value="Cập nhật nhà cung cấp" class="btn btn-primary btn-sm" />
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="/Admin/NhaCungCap/Index" class="text-white"><i class="fas fa-arrow-circle-left"></i>&nbsp; Trở về</a>
                            </button>
                        </div>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <!--False khi nó nhận lỗi trả về là false mới báo-->

                                @Html.ValidationMessage("nhacungcap", new { @class = "text-danger" })
                                @Html.ValidationMessage("nhacungcapSuccess", new { @class = "text-success" })
                                @Html.HiddenFor(model => model.IDNCC)
                            </div>

                            <div class="form-group">
                                @Html.Label("Tên nhà cung cấp", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Đia Chỉ", htmlAttributes: new { @class = "control-label  col-12" })
                                @Html.TextAreaFor(model => model.DiaChi, new { @class = "form-control", style = "height: 100px", @rows = 5 })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.Label("Số điện thoại", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>



                            <div class="form-group">
                                @Html.Label("Người Tạo", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.DropDownListFor(model => model.IDNguoiTao, null, "[Chọn người tạo]", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label  col-12" })
                                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

}
