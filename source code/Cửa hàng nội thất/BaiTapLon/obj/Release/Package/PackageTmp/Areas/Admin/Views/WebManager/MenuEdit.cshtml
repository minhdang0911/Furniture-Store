@model Mood.EF2.Menu

@{
    
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var target = ViewBag.target;
}

@using (Html.BeginForm("MenuEdit", "WebManager", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Cập nhật menu</h1>
                    </div>
                    <div class="col-6">
                        <div class="float-right pt-1">
                            <input type="submit" value="Cập nhật menu" class="btn btn-primary btn-sm" />
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="/Admin/WebManager/Menu" class="text-white"><i class="fas fa-arrow-circle-left"></i>&nbsp; Trở về</a>
                            </button>
                        </div>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <!--False khi nó nhận lỗi trả về là false mới báo-->
                                @Html.ValidationMessage("menu", new { @class = "text-danger" })
                                @Html.ValidationMessage("menuSuccess", new { @class = "text-success" })
                                @Html.HiddenFor(model => model.Target)
                                @Html.HiddenFor(model=>model.IDMenu)
                            </div>

                            <div class="form-group">
                                @Html.Label("Tên menu", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.NameMenu, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Liên kết Link", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Thự Tự Menu", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Target</label>
                                <select class="form-control" name="Target2">
                                    @if (target.Equals("_blank"))
                                    {
                                        <option value="1">_blank</option>
                                        <option value="2">_self</option>
                                    }
                                    else
                                    {
                                        <option value="2">_self</option>
                                        <option value="1">_blank</option>
                                    }

                                </select>
                            </div>
                            <div class="form-group">
                                @Html.Label("Cấp Menu", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.DropDownListFor(model => model.MenuTypeID, null, "[Chọn cấp menu]", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    @Html.Label("Trạng Thái", htmlAttributes: new { @class = "control-label  col-12" })
                                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control" })
                                </div>
                            </div>


                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>
}

