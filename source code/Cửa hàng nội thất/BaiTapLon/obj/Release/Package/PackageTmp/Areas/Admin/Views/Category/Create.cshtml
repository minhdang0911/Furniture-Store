@model Mood.EF2.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Thêm thể loại mới</h1>
                    </div>
                    <div class="col-6">
                        <div class="float-right pt-1">
                            <input type="submit" value="Tạo thể loại" class="btn btn-primary btn-sm" />
                            <button type="button" class="btn btn-danger btn-sm">
                                <a href="/Admin/Category/Index" class="text-white"><i class="fas fa-arrow-circle-left"></i>&nbsp; Trở về</a>
                            </button>
                        </div>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <!--False khi nó nhận lỗi trả về là false mới báo-->
                                @Html.ValidationMessage("category", new { @class = "text-danger" })
                                @Html.ValidationMessage("categorySuccess", new { @class = "text-success" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Tên thể loại", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.TenTheloai, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Từ khóa (SEO)", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                           
                           </div>
                        <div class="col-md-3">

                            <div class="form-group">
                                @Html.Label("Người Tạo", htmlAttributes: new { @class = "control-label  col-12" })
                                <div class="">
                                    @Html.EditorFor(model => model.NguoiTao, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label  col-12" })
                                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control" })
                                </div>
                            </div>


                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>
        
}
