@model List<Mood.EF2.Menu>
@{
    var listMoiNhat = (List<Mood.EF2.Sanpham>)ViewBag.Sanphamnew;
    var listYeuThich = (List<Mood.EF2.Sanpham>)ViewBag.topHot;
    var listAllProduct = (List<Mood.EF2.Sanpham>)ViewBag.getAllProduct;
    var listNoiBat = (List<Mood.EF2.Sanpham>)ViewBag.NoiBat;
    var listDeXuat = (List<Mood.EF2.Sanpham>)ViewBag.Deal;
}

<div class="site-navigation mr-auto d-none d-xl-block">
    <ul class="nav">
       
        <li class="nav-item"><a href="#" class="nav-link link-black-100 mx-2 px-0 py-3 font-weight-medium active border-bottom border-primary border-width-2">Trang Chủ</a></li>
        
        @foreach (var item in Model)
        {
            if (item.DisplayOrder == 1)
            {
                <li class="nav-item">
                    <a id="featuresDropdownInvoker" href="#" class="dropdown-toggle nav-link link-black-100 mx-2 px-0 py-3 font-weight-medium d-flex align-items-center"
                       aria-haspopup="true"
                       aria-expanded="false"
                       data-unfold-event="hover"
                       data-unfold-target="#featuresDropdownMenu"
                       data-unfold-type="css-animation"
                       data-unfold-duration="200"
                       data-unfold-delay="50"
                       data-unfold-hide-on-scroll="true"
                       data-unfold-animation-in="slideInUp"
                       data-unfold-animation-out="fadeOut">
                        @item.NameMenu
                    </a>
                    <div id="featuresDropdownMenu" class="p-0 dropdown-unfold dropdown-menu megamenu font-size-2 rounded-0 border-gray-900" aria-labelledby="featuresDropdownInvoker" style="width:1100px;">
                        <div class="row no-gutters">
                            <div class="col-8 px-1">
                                <div class="px-5 py-2 pb-5">
                                    <div class="row">
                                        <div class="col-4">
                                            <ul class="menu list-unstyled">
                                                <li><span class=" d-block link-black-100 py-3 font-size-3 font-weight-medium">Mới Nhất</span></li>
                                                @foreach (var item2 in listMoiNhat)
                                                {
                                                    var url = "/chi-tiet/" + item2.MetaTitle + "-" + item2.IDContent;
                                                    <li><a href="@url" class="d-block link-black-100 py-1">@item2.Name</a></li>
                                                }
                                               
                                                

                                            </ul>
                                        </div>
                                        <div class="col-4">
                                            <ul class="menu list-unstyled">
                                                <li><span class=" d-block link-black-100 py-3 font-size-3 font-weight-medium">Yêu Thích</span></li>
                                                @foreach (var item2 in listYeuThich)
                                                {
                                                    var url = "/chi-tiet/" + item2.MetaTitle + "-" + item2.IDContent;
                                                    <li><a href="@url" class="d-block link-black-100 py-1">@item2.Name</a></li>
                                                }

                                                <li><span class=" d-block link-black-100 py-3 font-size-3 font-weight-medium">Nổi Bật</span></li>
                                                @foreach (var item2 in listNoiBat)
                                                {
                                                    var url = "/chi-tiet/" + item2.MetaTitle + "-" + item2.IDContent;
                                                    <li><a href="@url" class="d-block link-black-100 py-1">@item2.Name</a></li>
                                                }

                                            </ul>
                                        </div>
                                        <div class="col-4">
                                            <ul class="menu list-unstyled">
                                                <li><span class=" d-block link-black-100 py-3 font-size-3 font-weight-medium">Đề Xuất</span></li>
                                                @foreach (var item2 in listDeXuat)
                                                {
                                                    var url = "/chi-tiet/" + item2.MetaTitle + "-" + item2.IDContent;
                                                    <li><a href="@url" class="d-block link-black-100 py-1">@item2.Name</a></li>
                                                }
                                                
                                                
                                            </ul>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 bg-gray-200">
                                <div class="banner px-8 py-5">
                                    <div class="banner__body">
                                        <h3 class="banner_text m-0">
                                            <span class="d-block mb-1 font-size-7 font-weight-regular">Đặt Ngay </span>
                                            <span class="d-block mb-2 font-size-10 text-primary font-weight-bold">Sách</span>
                                        </h3>
                                        <a href="/san-pham" class="d-block link-black-100 mb-6">Mua Ngay</a>
                                        <div class="banner__image">
                                            <img src="~/assets/img/imgbook/img_deal.png" width="280" height="210" class="img-fluid" alt="image-description">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item"><a href="@item.Link/" class="nav-link link-black-100 mx-2 px-0 py-3 font-weight-medium">@item.NameMenu</a></li>
            }

        }
        
        
        
    </ul>
</div>
