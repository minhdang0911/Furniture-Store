    <div class="bg-gray-200 space-top-2 space-bottom-3 space-top-lg-3 space-bottom-lg-4">
        <div class="container">
            <header class="mb-5 d-md-flex justify-content-between align-items-center">
                <h2 class="font-size-7 mb-3 mb-md-0">@listTab1[0].TenTheloai</h2>
                <a href="/san-pham" class="h-primary d-block">Xem Tất Cả <i class="glyph-icon flaticon-next"></i></a>
            </header>
            <div class="js-slick-carousel u-slick u-slick--gutters-3 products"
                 data-autoplay="true"
                 data-autoplay-speed="5000"
                 data-pagi-classes="text-center u-slick__pagination mt-7 position-absolute right-0 left-0"
                 data-slides-show="3"
                 data-responsive='[{
                       "breakpoint": 1199,
                       "settings": {
                         "slidesToShow": 2
                       }
                    }, {
                       "breakpoint": 992,
                       "settings": {
                         "slidesToShow": 1
                       }
                    }, {
                       "breakpoint": 554,
                       "settings": {
                         "slidesToShow": 1
                       }
                    }]'>
                @foreach (var item in listTab1)
                {
                    var price_sale_tab1 = 0;
                    if (item.PriceSale != null)
                    {
                        price_sale_tab1 = (int)item.PriceSale;
                    }
                    var price_deal_tab1 = (item.GiaTien - item.GiaTien / 100 * (price_sale_tab1));
                    var url = "/chi-tiet/" + item.Metatile + "-" + item.IDContent;
                    <div class="product product__card border-0">
                        <div class="media p-3 p-md-4d875 bg-white border">
                            <a href="@url" class="d-block"><img src="@item.Images" width="120" height="180" alt="image-description"></a>
                            
                            <div class="media-body ml-4d875">
                                <div class="text-uppercase font-size-1 mb-1 text-truncate"><a href="@url">Bìa Mềm</a></div>
                                <h2 class="woocommerce-loop-product__title h6 text-lh-md mb-1 text-height-2 crop-text-2 h-dark"><a href="@url">@item.Name</a></h2>
                                <div class="font-size-2 mb-1 text-truncate"><a href="@url" class="text-gray-700">@item.TacGia</a></div>
                                <div class="price d-flex align-items-center font-weight-medium font-size-3">
                                    @if (price_sale_tab1 > 0)
                                    {
                                        <ins class="text-decoration-none mr-2">@price_deal_tab1.ToString("N0")</ins>
                                        <del class="font-size-1 font-weight-regular text-gray-700"><span class="woocommerce-Price-amount amount">@item.GiaTien.ToString("N0")đ</span></del>
                                    }
                                    else
                                    {
                                        <span class="woocommerce-Price-amount amount">@item.GiaTien.ToString("N0")đ</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
                
            </div>
        </div>
    </div>
</section>
<!--End Tiểu Thuyết-->
